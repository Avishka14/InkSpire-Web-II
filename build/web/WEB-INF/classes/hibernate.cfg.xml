<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ink_spire?useSSL=false</property>
    <property name="hibernate.connection.username"></property> <!-- user name here -->
    <property name="hibernate.connection.password"></property> <!-- Password here -->
    <property name="hibernate.show_sql">true</property>
    <mapping class="hibernate.User" />
    <mapping class="hibernate.Category" />
    <mapping class="hibernate.Condition" />
    <mapping class="hibernate.Avilability" />
    <mapping class="hibernate.Listing" />
    <mapping class="hibernate.Product" />  
    <mapping class="hibernate.Seller" />
    <mapping class="hibernate.ListingApproval" />
    <mapping class="hibernate.Offers" />
    <mapping class="hibernate.OfferType" />
  </session-factory>
</hibernate-configuration>
